<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistema Universitario"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnFacultades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de Facultades"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnProfesores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de Profesores"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnVerificarDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verificar Base de Datos"/>

</LinearLayout>